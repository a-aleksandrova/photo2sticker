import pygame
def get_rects():
    x = 100
    y = 100
    pg.init()
    screen = pg.display.set_mode((640, 480))
    clock = pg.time.Clock()
    rect = pg.Rect(100, 100, 161, 100)
    rect_selected = False

    done = False
    while not done:
        for event in pg.event.get():
            if event.type == pg.QUIT:
                done = True
            elif event.type == pg.MOUSEBUTTONDOWN:
                # Set rect_selected to True when the user clicks on the rect.
                if rect.collidepoint(event.pos):
                    rect_selected = True
            elif event.type == pg.MOUSEBUTTONUP:
                rect_selected = False
            elif event.type == pg.MOUSEMOTION:
                if rect_selected:
                    if pg.mouse.get_pressed()[2] == 1:
                        # Simply adjust the width and the height of the screen
                        # by subtracting the relative mouse movement.
                        rect.w += event.rel[0]
                        rect.h += event.rel[1]
                        # 10*10 px is the minimal size, so that the rect can
                        # still be clicked.
                        rect.w = max(rect.w, 10)
                        rect.h = max(rect.h, 10)
                    if pg.mouse.get_pressed()[0] == 1: # Left mouse button pressed.
                        rect.x += event.rel[0]
                        rect.y += event.rel[1]
        screen.fill((30, 30, 30))
        pg.draw.rect(screen, (0, 100, 250), rect, 2)
        pg.display.flip()

get_rects()
